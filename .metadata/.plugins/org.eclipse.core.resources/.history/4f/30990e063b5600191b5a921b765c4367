import processing.core.PImage;

public class Pistol extends Weapon {
	
	public Pistol() {
		super(DrawingSurfaceG.pistol2, DrawingSurfaceG.pistol, 1, 10);
	}
	
	public Bullet shoot(int x, int y, String owner, int direction) {
		return new Bullet(DrawingSurfaceG.getBullet(), x, y, 25, 15, owner, direction, damage);
	}

}
