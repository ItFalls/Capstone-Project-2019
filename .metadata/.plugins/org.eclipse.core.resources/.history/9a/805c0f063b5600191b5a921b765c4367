import processing.core.PImage;

public class Sniper extends Weapon {
	
	public Sniper() {
		super(DrawingSurfaceG.sniper2, DrawingSurfaceG.sniper, 6, 40);
	}

	public Bullet shoot(int x, int y, String owner, int direction) {
		return new Bullet(DrawingSurfaceG.getBullet(), x, y, 30, 10, owner, direction, damage);
	}

}
